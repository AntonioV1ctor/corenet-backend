(ns corenet-backend.routes
  (:require
   [cheshire.core :refer :all]
   [compojure.core :refer :all]))


(defn home-route []
  (GET "/" []
       {:status 200
        :header {"Content-Type" "application/json"}
        :body (generate-string {:msg "Welcome To CoreNet API V1"})}))


(defn create-post []
  (POST "/create-post" [titulo conteudo])
  (try
    ;; Alguma função que utilize Datalog para salvar o Post do Blog
    ;; Logo abaixo deixei o retorno da API
    {:status 200
     :header {"Content-Type" "application/json"}
     :body (generate-string {:msg "Post criado com sucesso!"})} 
     
     (catch Exception e
         {:status 500
          :header {"Content-Type" "application/json"}
          :body (generate-string {:msg "Ocorreu um erro ao criar um post:"(.getMessage e)})})))
